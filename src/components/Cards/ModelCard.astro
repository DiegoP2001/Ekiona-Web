---
const { nombreFarola } = Astro.props;
const { descripcion } = Astro.props;
const { imgSrc } = Astro.props;
---

<style>
  @import url("https://fonts.googleapis.com/css2?family=Barlow+Condensed:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap");

  .model-card {
    margin-top: 10px;
    padding-bottom: 20px;
    font-family: "Barlow Condensed", sans-serif;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;

  }

  .model-card > img:hover {
    cursor: pointer;
  }

  h2 {
    font-weight: bolder;
    position: relative;
  }

  .model-card > h2::after {
    position: absolute;
    content: "";
    width: 16px;
    border-top: 2px solid #222;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
  }

  .model-card > p {
    width: 80%;

  }
</style>

<div class="model-card">
  <img
    src={imgSrc}
    alt="Farola Moon"
  />
  <h2 class="text-xl">{nombreFarola}</h2>
  <p class="text-[1.2rem] mt-5">{descripcion}</p>
</div>
